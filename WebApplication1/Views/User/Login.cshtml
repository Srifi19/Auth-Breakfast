@using WebApplication1.Models.DTOs;
@model LoginRequestDto;

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Login</h4>
                </div>
                <div class="card-body">

                    <form id="loginForm" asp-controller="Account" method="post" asp-validation-summary="ModelOnly">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label">Username</label>
                            <input type="text" class="form-control" id="userName" asp-for="UserName">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" asp-for="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary" asp-action="Login">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

